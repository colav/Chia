# OpenSearch Configuration
OPENSEARCH_VERSION=3.4.0

# Cluster Configuration
CLUSTER_NAME=colav-opensearch-cluster

# Ports
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
DASHBOARDS_PORT=5601

# Memory Configuration (adjust based on your system)
# Recommended: 50% of available RAM per node
# Development: 1g, Production: 4g-16g
HEAP_SIZE=1g

# Security Configuration
# Default password for the admin user (CHANGE IN PRODUCTION!)
OPENSEARCH_PASSWORD=ChangeMe@SecurePass2024

# Set to true to disable security plugin (NOT recommended for production)
SECURITY_DISABLED=false

# GPU Configuration (CPU-only mode by default)
# For GPU support, see .env.gpu.example
# Reference: https://docs.opensearch.org/latest/ml-commons-plugin/gpu-acceleration/
GPU_DRIVER=nvidia
GPU_COUNT=0              # 0 = CPU only (default)
PYTORCH_VERSION=1.12.1

# Example configurations:
# ----------------------------------------------------------------------
# Development/Testing (CPU only):
#   HEAP_SIZE=1g
#   GPU_COUNT=0
#
# Production (CPU only):
#   HEAP_SIZE=8g
#   GPU_COUNT=0
#   OPENSEARCH_PASSWORD=<strong-password>
#
# For GPU configurations, copy .env.gpu.example
# ----------------------------------------------------------------------
