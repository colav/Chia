# OpenSearch Configuration
OPENSEARCH_VERSION=3.4.0

# Cluster Configuration
CLUSTER_NAME=colav-opensearch-cluster

# Ports
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
DASHBOARDS_PORT=5601

# Memory Configuration (adjust based on your system)
# Recommended: 50% of available RAM per node
HEAP_SIZE=4g

# Security Configuration
# Default password for the admin user (change in production!)
OPENSEARCH_PASSWORD=Colav@2024Secure

# Set to true to disable security plugin (NOT recommended for production)
SECURITY_DISABLED=false

# GPU Configuration (for ML acceleration with NVIDIA CUDA)
# Set GPU_COUNT > 0 to enable NVIDIA GPU support for ML models
# Reference: https://docs.opensearch.org/latest/ml-commons-plugin/gpu-acceleration/

# GPU driver (nvidia for NVIDIA GPUs with CUDA 11.6+)
GPU_DRIVER=nvidia

# Number of GPUs to use (0 = CPU only, 1+ = use GPUs)
GPU_COUNT=1

# PyTorch version for ML models (required for GPU acceleration)
# Latest stable: 2.9.1 (November 2025)
PYTORCH_VERSION=2.9.1

