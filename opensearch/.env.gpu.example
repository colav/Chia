# OpenSearch Configuration
OPENSEARCH_VERSION=3.4.0

# Cluster Configuration
CLUSTER_NAME=colav-opensearch-cluster

# Ports
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
DASHBOARDS_PORT=5601

# Memory Configuration (adjust based on your system)
# For GPU workloads, increase to at least 4g
HEAP_SIZE=4g

# Security Configuration
OPENSEARCH_PASSWORD=YourStrongPass@2024
SECURITY_DISABLED=false

# GPU Configuration (NVIDIA CUDA 11.6+)
# Enable GPU acceleration for ML workloads
# Set GPU_COUNT > 0 to enable GPU support
GPU_DRIVER=nvidia
GPU_COUNT=1              # 0=CPU only, 1+=number of GPUs to use
PYTORCH_VERSION=1.12.1

# CUDA Configuration (optional, for advanced users)
# CUDA_VISIBLE_DEVICES=0,1  # Comma-separated GPU IDs to use

# Example configurations:
# ----------------------------------------------------------------------
# Development (CPU only):
#   HEAP_SIZE=1g
#   GPU_COUNT=0
#
# Production (Single GPU):
#   HEAP_SIZE=4g
#   GPU_COUNT=1
#
# Production (Multi-GPU):
#   HEAP_SIZE=8g
#   GPU_COUNT=2
# ----------------------------------------------------------------------
